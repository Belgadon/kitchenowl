{
  "categories": [
    {
      "title": "## ✨ Features",
      "labels": ["enhancement"]
    },
    {
      "title": "## 🐛 Fixes",
      "labels": ["fix", "bug"]
    },
    {
      "title": "## 🧪 Tests",
      "labels": ["test"]
    },
    {
      "title": "## 📚 Documentation",
      "labels": ["documentation"]
    }
  ],
  "ignore_labels": ["ignore"],
  "sort": {
    "order": "ASC",
    "on_property": "mergedAt"
  },
  "template": "${{CHANGELOG}}\n\n{{RELEASE_DIFF}}\n\n<details>\n<summary>Uncategorized</summary>\n\n${{UNCATEGORIZED}}\n</details>",
  "pr_template": "- ${{TITLE}} (#${{NUMBER}} by @${{AUTHOR}})",
  "empty_template": "- no changes",
  "base_branches": ["main"]
}
